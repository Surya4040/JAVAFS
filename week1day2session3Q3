package com.examly;

public class ShopDiscountTracker {

    // Method to count eligible products (price >= 500)
    public static int countEligible(double[] prices) {
        int count = 0;
        if (prices != null) {
            for (double price : prices) {
                if (price >= 500.0) {
                    count++;
                }
            }
        }
        return count;
    }

    // Method to display eligible product prices formatted
    public static void displayEligible(double[] prices) {
        if (prices != null) {
            for (double price : prices) {
                if (price >= 500.0) {
                    System.out.printf("Rs %.2f%n", price);
                }
            }
        }
    }

    // Optional main method for quick manual testing
    public static void main(String[] args) {
        double[] sample = {450.0, 500.0, 550.5, 600.0};
        System.out.println("Eligible count: " + countEligible(sample));
        displayEligible(sample);
    }
}
